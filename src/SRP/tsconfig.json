{
  "compilerOptions": {
    "target": "es2021",
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowJs": true,
    "rootDir": "./",
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,                    /* will issue an error whenever it would have inferred any:*/ 
    "forceConsistentCasingInFileNames": true
  },
  "files": ["bad_book.ts", "file_manager_bad.ts"],
  "exclude": [
        "node_modules",
        "build",
        "lib",
        "test",
        "public"
  ],
  "include": ["bad_book.ts"]
}